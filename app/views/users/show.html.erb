<%= form_for @user, html: { multipart: true } do |f| %>
  <p>
    <label>Upload a Photo</label>
    <%= image_tag(@user.story_photo_url, { width: 300 }) if @user.story_photo? %>
    <%= f.file_field :story_photo %>
    <%= f.hidden_field :story_photo_cache %>
  </p>

  <p>
    <video controls>
      <source src="<%= @user.video_url %>" type="video/mp4">
    </video>
    <%= f.label :video, "Video" %>
    <%= f.file_field :video %>
    <%= f.hidden_field :video_cache %>
  </p>
  <%= f.submit "Upload" %>
<% end %>
